{
	"name": "rulr",
	"version": "0.0.0-development",
	"description": "A package that saves you time defining validation rules and correcting data",
	"main": "dist/lib.js",
	"author": "ryansmith94",
	"license": "MIT",
	"typings": "dist/lib.d.ts",
	"files": [
		"dist",
		"readme.md"
	],
	"scripts": {
		"test": "jest",
		"test:dev": "jest --watch -o",
		"start": "ts-node src/example.ts",
		"lint": "eslint --cache --fix src",
		"lint:ci": "eslint src",
		"build": "tsc"
	},
	"dependencies": {
		"make-error": "^1.3.6",
		"validator": "^13.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "12.0.1",
		"@types/jest": "26.0.21",
		"@types/node": "9.6.61",
		"@types/validator": "13.1.3",
		"@typescript-eslint/eslint-plugin": "4.19.0",
		"@typescript-eslint/parser": "4.19.0",
		"commitlint": "12.0.1",
		"eslint": "7.22.0",
		"eslint-config-prettier": "8.1.0",
		"husky": "4.3.8",
		"jest": "26.6.3",
		"prettier": "2.2.1",
		"pretty-quick": "3.1.0",
		"semantic-release": "17.4.2",
		"ts-jest": "26.5.4",
		"ts-node": "9.1.1",
		"typescript": "4.2.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"bail": 1,
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"lines": 100
			}
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"arrowParens": "always"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "jest --onlyChanged && pretty-quick --staged && yarn lint"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"scope-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			],
			"subject-case": [
				0,
				"always",
				[
					"sentence-case"
				]
			]
		}
	},
	"releases": {
		"branches": [
			"master"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"renovate": {
		"extends": [
			"@ht2-labs:base"
		]
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": 0
		}
	}
}
